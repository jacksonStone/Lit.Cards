{
  "compilerOptions": {
    "outDir": ".assets/dist/",
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "lit": ["node_modules/lit-html/lit-html"],
      "types": ["client/types/types"],
      "misc/*": ["misc/*"],
      "logic/*": ["client/business-logic/*"],
      "api/*": ["client/routes/api/*"],
      "site/*": ["client/routes/navigation/*"],
      "utils/*": ["client/utils/*"],
      "component/*": ["client/ui/shared-components/*"],
      "abstract/*": ["client/browser-abstractions/*"],
      "shared/*": ["shared-client/*"]
    }
  }
}
